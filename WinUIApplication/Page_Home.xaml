<Page
    x:Class="WinUIApplication.Page_Home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:WinUIApplication"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel VerticalAlignment="Center" Spacing="10">
        <TextBlock
            HorizontalAlignment="Center"
            FontSize="30"
            Text="Welcome" />
        <TextBlock
            FontSize="18"
            Text="To start using application"
            TextAlignment="Left" />
        <TextBlock
            FontSize="18"
            Text="Chose monitor to be auto rotated in (Manage monitors) tab"
            TextAlignment="Left" />
        <TextBlock
            FontSize="18"
            Text="Connect to Arduino in (Connection) tab"
            TextAlignment="Left" />
        <TextBlock
            FontSize="18"
            Text="Remap Axis"
            TextAlignment="Left" />
        <TextBlock
            FontSize="18"
            Text="Start auto rotation"
            TextAlignment="Left" />
        <TextBlock
            FontSize="18"
            Text="Done"
            TextAlignment="Left" />
    </StackPanel>
</Page>