<Page
    x:Class="WinUIApplication.Page_Home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:WinUIApplication"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel VerticalAlignment="Center" Spacing="10">
        <TextBlock
            HorizontalAlignment="Center"
            FontSize="30"
            Text="Welcome" />
        <TextBlock
            FontSize="18"
            Text="To start using application:"
            TextAlignment="Left" />
        <TextBlock
            FontSize="18"
            Text="- Choose a monitor to be auto rotated in (Manage monitors) tab."
            TextAlignment="Left" />
        <TextBlock
            FontSize="18"
            Text="- Connect to device by selecting its COM-port in (Connection) tab."
            TextAlignment="Left" />
        <TextBlock
            FontSize="18"
            Text="- Remap accelerometer Axes in (Connection) tab."
            TextAlignment="Left" />
        <TextBlock
            FontSize="18"
            Text="- Save settings."
            TextAlignment="Left" />
        <TextBlock
            FontSize="18"
            Text="- Start auto rotation in (Connection) tab."
            TextAlignment="Left" />
        <TextBlock
            FontSize="18"
            Text="- (Optionally) Specify layout for correct arrangement of monitors"
            TextAlignment="Left" />
        <TextBlock
            FontSize="18"
            Text="if using multiple monitors in (Manage monitors) tab."
            TextAlignment="Left" />
    </StackPanel>
</Page>